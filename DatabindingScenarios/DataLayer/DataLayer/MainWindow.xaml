<dx:ThemedWindow x:Class="DataLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        Title="Data Layer Options" Height="280" Width="320">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="30,5" />
            </Style>
        </StackPanel.Resources>
        <Button x:Name="basicCollectionButton" Content="Basic collection" Click="basicCollectionButton_Click" />
        <Button x:Name="efButton" Content="Entity Framework" Click="efButton_Click" />
        <Button x:Name="efServerModeSourceButton" Content="Server Mode (EF)" Click="efServerModeSourceButton_Click" />
        <Button x:Name="virtualSourceButton" Content="Virtual Source" Click="virtualSourceButton_Click" />
        <Button x:Name="efCurrentItemButton" Content="CurrentItem (EF)" Click="efCurrentItemButton_Click" />
    </StackPanel>
</dx:ThemedWindow>
